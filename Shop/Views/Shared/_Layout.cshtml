@using System.Web.Optimization
@model Shop.Models.MenuModel
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">
        <title>@Page.Title</title>
        @RenderSection("head", required: false)
        
        <link href="@Styles.Url("~/Content/jquery-ui/jquery-ui.min.css")" rel="stylesheet" />
        <link href="@Styles.Url("~/Content/jquery-ui/jquery-ui.structure.min.css")" rel="stylesheet" />
        <link href="@Styles.Url("~/Content/jquery-ui/jquery-ui.theme.min.css")" rel="stylesheet" />
        <link href="@Styles.Url("~/Content/css/bootstrap.min.css")" rel="stylesheet" />
        <link href="@Styles.Url("~/Content/css/heroic-features.css")" rel="stylesheet" />
        <link href="@Styles.Url("~/Content/css/shop-homepage.css")" rel="stylesheet" />

        <!--[if lt IE 9]>
          <script src="@Scripts.Url("~/Content/js/html5shiv.js")"></script>
          <script src="@Scripts.Url("~/Content/js/respond.min.js")"></script>
       <![endif]-->



    </head>
    <body>
        <div id="logo">
            <a href="/" title="ЧугунОК Днепропетровск"><img src="~/Content/img/logo.jpg" alt="Чугунок Днепропетровск"></a>
        </div>
        
        @{ Html.RenderPartial("MenuPartial", Model); }
        
        <div class="container container-nopadding">
            @*@{ Html.RenderPartial("BigCaruselPartial"); }*@
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div>
                        <div class="leftmenuitem">
                            <a href="@Url.Action("ListSkuOnCategory", "Home", new { idCat = 10002 })">
                                <img src="~/Content/img/sale_roung.png" alt="Акции Newer">
                            </a>
                        </div>
                        <div class="leftmenuitem">
                            <a href="@Url.Action("ListSkuOnCategory", "Home", new { idCat = 10003 })">
                                <img src="~/Content/img/new_round.png" alt="Новая коллекция Newer">
                            </a>
                        </div>
                    </div>
                    @*@{ Html.RenderPartial("VerticalMenuPartial", Model); }*@
                </div>
                <div class="col-md-9">
                    <div class="row">
                        <div class="col-lg-12">
                            <h3>@ViewBag.Title</h3>
                        </div>
                    </div>
                    @RenderBody()
                </div>
            </div>
        </div>
        @{Html.RenderPartial("footerPartial");}
       
        <script src="@Scripts.Url("~/Scripts/jquery-2.1.3.min.js")" type="text/javascript"></script>
        <script src="@Scripts.Url("~/Content/jquery-ui/jquery-ui.min.js")"></script>
        <script src="@Scripts.Url("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
        <script src="@Scripts.Url("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
        <script src="@Scripts.Url("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
        <script src="@Scripts.Url("~/Content/js/scripts.js")"></script>
        <script src="@Scripts.Url("~/Content/js/bootstrap.min.js")"></script>
        <script src="@Scripts.Url("~/Content/js/eventHandlers.js")"></script>
    </body>
</html>
