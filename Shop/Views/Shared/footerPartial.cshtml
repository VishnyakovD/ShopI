@model Shop.Models.MenuModel
<div class="container">
    <hr>
    <!-- Footer -->
    <footer>
        <div class="row">
          

                @if (WebSecurity.IsAuthenticated)
                {
                    if (User.IsInRole("Admin"))
                    {
                        <div class="col-lg-2">
                            <span><a href="@Url.Action("Administrator","Admin")">Админ панель</a></span>
                        </div>
                    }
                    <div class="col-lg-3">
                        @using (Html.BeginForm("LogOff", "Account"))
                        {
                        @Html.AntiForgeryToken();
                        <span>@WebSecurity.CurrentUserName <input type="submit" class="btn btn-blue" value="Выход" /></span>
                        }
                    </div>

                }
                else
                {
                    <div class="col-lg-3">
                        <a href="@Url.Action("Login","Account")">Вход на сайт</a>
                    </div>
                }

           
        </div>
        <div class="row">
            <div class="col-lg-12 text-center">
                Разработка <a href="mailto:vishnyakovd@gmail.com">Вишняков Дмитрий</a>
            </div>
        </div>
    </footer>
</div>